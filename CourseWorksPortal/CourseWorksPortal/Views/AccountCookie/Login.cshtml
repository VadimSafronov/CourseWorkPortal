@model CourseWorksPortal.ViewModels.LoginModel

<h2>Log in</h2>

<div>
    <div class="row" >
        <form class="col-md-4" asp-action="Login" asp-controller="AccountCookie" asp-anti-forgery="true">

            <h4>Use a local account to log in.</h4>
            <hr/>

            <div class="form-group">
                <label class="control-label" asp-for="Username">Username</label>
                <div class="input-group">
                    <span class="input-group-addon" id="basic-addon1">@("@")</span>
                    <input class="form-control" type="text" asp-for="Username" aria-describedby="basic-addon1" />
                </div>

            </div>

            <div class="form-group">
                <label class="control-label" for="inputError2" asp-for="Password">Password</label>
                <div class="input-group">
                    <span class="input-group-addon" id="basic-addon1">•••</span>
                    <input class="form-control" type="password" asp-for="Password" aria-describedby="basic-addon1" />
                </div>            
            </div>

            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

            <div class="form-group">
                <input type="submit" value="Log in" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>