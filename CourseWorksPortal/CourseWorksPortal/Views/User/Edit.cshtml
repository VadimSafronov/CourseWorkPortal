@model CourseWorksPortal.Models.User
@{
    ViewBag.Title = "Редактирование профиля";
}

</br>

<form asp-action="Edit" asp-controller="User" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="Username" class="control-label">Username</label>
        <input type="text" asp-for="Username" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password" class="control-label">Password</label>
        <input type="text" asp-for="Password" class="form-control" placeholder="Можете ввести новый пароль или оставить поле пустым (в таком случае пароль не изменится)"/>
    </div>
    <div class="form-group">
        <label asp-for="Role" class="control-label">Role</label>
        <input type="text" asp-for="Role" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Update" class="btn btn-success" />
    </div>
</form>
